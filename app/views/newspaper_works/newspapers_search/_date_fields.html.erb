<div id="date_range_limit_wrapper" class="newspapers_search_field">
  <div class="form-group" id="date_range_limit">
    <label class="control-label col-sm-3 ">
      <%= t("newspaper_works.newspapers_search.fields.date_range") %>
    </label>
    <div class="col-sm-7">
      <div class="input-group col-sm-5 date_input">
        <label id="date_range_start_label" class="input-group-addon" for="date_start">
          <%= t("newspaper_works.newspapers_search.fields.date_start") %>
        </label>
        <%= text_field_tag 'date_start',
                           nil,
                           :id => 'date_range_start',
                           :class => 'form-control',
                           :maxlength => 4 %>
      </div>
      <div class="input-group col-sm-5 date_input">
        <label id="date_range_end_label" class="input-group-addon" for="date_end">
          <%= t("newspaper_works.newspapers_search.fields.date_end") %>
        </label>
        <%= text_field_tag 'date_end',
                           nil,
                           :id => 'date_range_end',
                           :class => 'form-control',
                           :maxlength => 4 %>
      </div>
    </div>
  </div>
</div>
