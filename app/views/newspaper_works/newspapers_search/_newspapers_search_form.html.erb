<%= form_tag main_app.search_catalog_path, method: :get,
             class: "form-horizontal search-form",
             id: "newspapers_search_form", role: "search" do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <%= hidden_field_tag :search_field, 'advanced' %>

  <%= render 'keyword_input' %>

  <%= render 'date_fields' %>

  <%= render 'newspapers_facets' %>

<% end %>
